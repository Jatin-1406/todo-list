<%- include('partials/header') %>
    <div class="container bg-white">
        <h2 class="text-center mb-4">Login</h2>
        <% if (error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>
        <form action="/login" method="POST">
            <div class="mb-3">
                <input type="email" name="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="mb-3">
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-custom btn-primary w-100">Login</button>
            <a href="/auth/google" class="btn btn-custom btn-danger w-100 mt-2">Login with Google</a>
        </form>
        <p class="text-center mt-3">Not registered? <a href="/register" class="text-primary">Register here</a></p>
    </div>
<%- include('partials/footer') %>